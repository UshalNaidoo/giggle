<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"
    android:gravity="center_vertical">

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical">

    <TextView
        android:id="@+id/timeSince"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/info_text_size"
        android:gravity="end"
        android:layout_weight="1"
        android:textColor="@color/app_grey"/>

  </LinearLayout>

  <LinearLayout
      android:id="@+id/layoutView"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="5dp"
      android:background="@color/item_background_white_color">

    <TextView
        android:id="@+id/title"
        android:layout_marginStart="8dp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textColor="@color/text_colour_secondary"
        android:textSize="@dimen/username_text_size"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/postImage"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

      <ProgressBar
          android:id="@+id/imageProgressBar"
          android:layout_width="fill_parent"
          android:layout_height="40dp"
          style="@android:style/Widget.ProgressBar.Large"/>
    </RelativeLayout>
  </LinearLayout>
  <TextView
      android:id="@+id/tags"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:text=""
      android:textColor="@color/text_hint_color"
      android:layout_marginStart="10dp"
      android:textSize="@dimen/info_text_size"
      android:layout_weight="1"
      android:textAppearance="?android:attr/textAppearanceLarge"/>

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="40dp"
      android:layout_marginTop="10dp"
      android:orientation="horizontal"
      android:paddingRight="0dp"
      android:paddingLeft="0dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

      <ImageView
          android:id="@+id/likeImage"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginTop="4dp"
          android:src="@drawable/up_arrow_grey"
          android:layout_weight="1"/>

      <TextView
          android:id="@+id/postNumberOfLikes"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:textSize="@dimen/info_text_size"
          android:layout_weight="1"
          android:textColor="@color/text_hint_color"/>

      <ImageView
          android:id="@+id/favoriteImage"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/heart_unlike"
          android:layout_marginTop="4dp"
          android:layout_marginStart="15dp"
          android:layout_weight="1"/>

      <ImageView
          android:id="@+id/commentImage"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/comment"
          android:layout_marginTop="4dp"
          android:layout_marginStart="15dp"
          android:layout_weight="1"/>
      <TextView
          android:id="@+id/postNumberOfComments"
          android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:textSize="@dimen/info_text_size"
          android:layout_weight="1"
          android:textColor="@color/text_hint_color"/>

      <ImageView
          android:id="@+id/shareImage"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/share"
          android:layout_marginTop="4dp"
          android:layout_marginStart="15dp"
          android:layout_weight="1"/>

      <ImageView
          android:id="@+id/menuImage"
          android:layout_gravity="end"
          android:layout_width="0dp"
          android:layout_height="20dp"
          android:src="@drawable/dot_menu"
          android:layout_weight="1"/>

    </LinearLayout>

  </LinearLayout>

  <View android:id="@+id/primerdivisor"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="@color/divisor_color"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"/>
</LinearLayout>