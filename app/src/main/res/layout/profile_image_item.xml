<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"
    android:gravity="center_vertical">

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical">

    <TextView
        android:id="@+id/timeSince"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="end"
        android:layout_weight="1"
        android:textColor="@color/app_grey"/>

  </LinearLayout>

  <LinearLayout
      android:id="@+id/layoutView"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="5dp"
      android:background="@color/secondary_black">

    <TextView
        android:id="@+id/title"
        android:layout_marginStart="8dp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/postImage"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

      <ProgressBar
          android:id="@+id/progressBar"
          android:layout_width="fill_parent"
          android:layout_height="40dp"
          style="@android:style/Widget.ProgressBar.Large"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tags"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/app_grey"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    <ImageView
        android:id="@+id/gbLogo"
        android:layout_marginTop="4dp"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/gigglebyte_banner"
        android:scaleType="fitCenter"/>
  </LinearLayout>
  <TextView
      android:id="@+id/postInfo"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:textSize="16sp"
      android:gravity="end"
      android:layout_weight="1"
      android:textColor="#9e9c9f"/>
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="40dp"
      android:layout_marginTop="10dp"
      android:orientation="horizontal"
      android:paddingRight="0dp"
      android:paddingLeft="0dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

      <ImageView
          android:id="@+id/likeImage"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginTop="4dp"
          android:src="@drawable/star_unlike"
          android:layout_weight="1"/>

      <ImageView
          android:id="@+id/favoriteImage"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/heart_unlike"
          android:layout_marginTop="4dp"
          android:layout_marginStart="15dp"
          android:layout_weight="1"/>

      <ImageView
          android:id="@+id/commentImage"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/comment"
          android:layout_marginTop="4dp"
          android:layout_marginStart="15dp"
          android:layout_weight="1"/>

      <ImageView
          android:id="@+id/shareImage"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:src="@drawable/share"
          android:layout_marginTop="4dp"
          android:layout_marginStart="15dp"
          android:layout_weight="1"/>

      <ImageView
          android:id="@+id/menuImage"
          android:layout_gravity="end"
          android:layout_width="0dp"
          android:layout_height="20dp"
          android:src="@drawable/dot_menu"
          android:layout_weight="1"/>

    </LinearLayout>

  </LinearLayout>

  <View android:id="@+id/primerdivisor"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="@color/app_primary_dark"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"/>
</LinearLayout>