<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true">
    <shape>
      <solid android:color="#1c1b20"/>

      <stroke android:width="1dp" android:color="#1c1b20"/>

    </shape>
  </item>
  <item>
    <shape>
      <gradient android:angle="270" android:endColor="#1c1b20" android:startColor="#1c1b20"/>

      <stroke android:width="1dp" android:color="#1c1b20"/>

    </shape>
  </item>

</selector>